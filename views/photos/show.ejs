    </section>
    <nav>
    <ul>
      <li><a href="/">Return To Homepage</a></li>
      <li><a href="/photos">Photos Index</a></li>
      <li><a href="/photos/<%=photo.id%>/edit">Edit Photo</a></li>
    </ul>
  </nav>
  </main>
</body>
</html>
